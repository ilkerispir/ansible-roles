server {
  listen 80;
  server_name creatiodev.turk.net;
  return 301 https://$server_name$request_uri;
}

server {
  listen 443 ssl http2;
  server_name creatiodev.turk.net;

  ssl_certificate       /etc/nginx/certs/turk.net.crt;
  ssl_certificate_key   /etc/nginx/certs/turk.net.key;

  access_log /var/log/nginx/creatiodev-access.log;
  error_log /var/log/nginx/creatiodev-error.log;

  location / {
    proxy_pass         http://10.2.134.12:5000;
    proxy_http_version 1.1;
    proxy_set_header   Upgrade $http_upgrade;
    proxy_set_header   Connection keep-alive;
    proxy_set_header   Host $host;
    proxy_cache_bypass $http_upgrade;
    proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header   X-Forwarded-Proto $scheme;
  }
}
